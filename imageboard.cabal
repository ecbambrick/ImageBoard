name:                   imageboard
version:                0.1.0.0
homepage:               https://github.com/ecbambrick/imageboard/
category:               Application
synopsis:               Image board
description:            Simple tag-based image organization board.
author:                 Cole Bambrick
maintainer:             cole.bambrick@gmail.com
build-type:             Simple
cabal-version:          >= 1.10

data-files:
    templates/*
    static/*

extra-source-files:
    schema.sql
    app.cfg

executable imageboard
    main-is:            main.hs
    hs-source-dirs:     src
    default-language:   Haskell2010
    
    other-modules:
        App.Core.Image,
        App.Core.Tag,
        App.Common,
        App.Config,
        App.Database,
        App.Expression,
        App.FileType,
        App.Paths,
        App.Template,
        App.Validation,
        Data.Time.Extended,
        Data.Textual,
        Database.Engine,
        Database.Query.SQLite,
        Database.Query,
        Graphics.Thumbnail,
        System.IO.Metadata,
        Web.Spock.Extended
    
    build-depends:
        base                    >= 4.7  && < 4.8,
        configurator            >= 0.3  && < 0.4,
        cryptohash              >= 0.11 && < 0.12,
        hastache                >= 0.6  && < 0.7,
        JuicyPixels             >= 3.2  && < 3.3,
        Spock                   >= 0.7  && < 0.8,
        sqlite-simple           >= 0.4  && < 0.5,
        unordered-containers    >= 0.2  && < 0.3,
        wai-middleware-static   >= 0.7  && < 0.8,
        async,
        bytestring,
        directory,
        filepath,
        HUnit,
        mtl,
        parsec,
        path-pieces,
        process,
        text,
        time,
        wai
